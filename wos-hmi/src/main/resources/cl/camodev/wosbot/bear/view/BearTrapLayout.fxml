<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<GridPane hgap="20" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="500.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="18" left="18" right="18" top="18" />
    </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="70" />
        <ColumnConstraints percentWidth="30" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>
    <children>
        <!-- Main content panel with ScrollPane -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent; -fx-background: transparent;" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <content>
                <VBox spacing="14" style="-fx-background-color: #1f1f1f; -fx-background-radius: 8; -fx-padding: 18;">
                    <children>
                        <CheckBox fx:id="checkBoxEnableBearTrap" mnemonicParsing="false" style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Enable Bear Trap" />

                        <Label style="-fx-font-size: 12px; -fx-text-fill: #b5b5b5;" text="Automate Bear Trap event with scheduled preparation and rally management." wrapText="true" />

                        <Separator />

                        <!-- Trap Schedule Section -->
                        <VBox spacing="0" style="-fx-background-color: #242424; -fx-background-radius: 8;">
                            <children>
                                <Label maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#ffd966, #ff8c1a); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12; -fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Trap Schedule" />
                                <VBox spacing="12" style="-fx-padding: 16;">
                                    <children>
                                        <VBox spacing="6">
                                            <children>
                                                <Label style="-fx-text-fill: #e5e5e5;" text="Next Bear Trap (UTC)" />
                                                <TextField fx:id="textFieldScheduleDateTime" promptText="dd-MM-yyyy HH:mm" />
                                                <Label fx:id="labelDateTimeError" style="-fx-font-size: 11px; -fx-text-fill: #ff4444;" text="" wrapText="true" />
                                            </children>
                                        </VBox>

                                        <VBox spacing="6">
                                            <children>
                                                <Label style="-fx-text-fill: #e5e5e5;" text="Preparation Time (minutes)" />
                                                <TextField fx:id="textFieldPreparationTime" prefWidth="100.0" promptText="5" />
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Preparation Section -->
                        <VBox spacing="0" style="-fx-background-color: #242424; -fx-background-radius: 8;">
                            <children>
                                <Label maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#47b3ff, #1a7cff); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12; -fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Preparation" />
                                <VBox spacing="10" style="-fx-padding: 16;">
                                    <children>
                                        <CheckBox fx:id="checkBoxActivePets" mnemonicParsing="false" text="Active Pets" />
                                        <CheckBox fx:id="checkBoxRecallTroops" mnemonicParsing="false" text="Recall Gather Troops" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Trap Configuration Section -->
                        <VBox spacing="0" style="-fx-background-color: #242424; -fx-background-radius: 8;">
                            <children>
                                <Label maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#ff6b6b, #c92a2a); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12; -fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Trap Configuration" />
                                <VBox spacing="12" style="-fx-padding: 16;">
                                    <children>
                                        <!-- Trap Selection -->
                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                            <children>
                                                <Label style="-fx-text-fill: #e5e5e5;" text="Trap Number" minWidth="100.0" />
                                                <ComboBox fx:id="comboBoxTrapNumber" prefWidth="100.0" />
                                            </children>
                                        </HBox>

                                        <!-- Call Rally -->
                                        <VBox spacing="8">
                                            <children>
                                                <CheckBox fx:id="checkBoxCallRally" mnemonicParsing="false" text="Call Own Rally" />
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Rally Flag" minWidth="100.0" />
                                                        <ComboBox fx:id="comboBoxRallyFlag" prefWidth="100.0" />
                                                    </children>
                                                    <padding>
                                                        <Insets left="20.0" />
                                                    </padding>
                                                </HBox>
                                            </children>
                                        </VBox>

                                        <!-- Join Rally -->
                                        <VBox spacing="8">
                                            <children>
                                                <CheckBox fx:id="checkBoxEnableJoin" mnemonicParsing="false" text="Enable Join Rally" />
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Join Flag" minWidth="100.0" />
                                                        <CheckComboBox fx:id="checkComboBoxJoinFlag" prefWidth="100.0" />
                                                    </children>
                                                    <padding>
                                                        <Insets left="20.0" />
                                                    </padding>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Info panel -->
        <VBox alignment="TOP_LEFT" spacing="8" style="-fx-background-color: #262626; -fx-background-radius: 8; -fx-padding: 16;" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <children>
                <Label style="-fx-font-size: 12px; -fx-text-fill: linear-gradient(#ffd966, #ff8c1a); -fx-font-weight: bold;" text="Bear Trap Event" wrapText="true" />
                <Label text="" />
                <Label style="-fx-font-weight: bold; -fx-font-size: 11px; -fx-text-fill: #f2f2f2;" text="Quick guide" />
                <Separator style="-fx-background-color: #ff8c1a; -fx-opacity: 1;" />
                <Label style="-fx-font-size: 10px; -fx-text-fill: #d0d0d0;" text="• Enable to activate the Bear Trap automation." wrapText="true" />
                <Label style="-fx-font-size: 10px; -fx-text-fill: #d0d0d0;" text="• Set next trap time in UTC format (dd-MM-yyyy HH:mm)." wrapText="true" />
                <Label style="-fx-font-size: 10px; -fx-text-fill: #d0d0d0;" text="• Preparation time: minutes before trap activation." wrapText="true" />
                <Label style="-fx-font-size: 10px; -fx-text-fill: #d0d0d0;" text="• Active Pets will be enabled during preparation." wrapText="true" />
                <Label style="-fx-font-size: 10px; -fx-text-fill: #d0d0d0;" text="• Recall troops will return your gathering marches" wrapText="true" />
                <Label style="-fx-font-size: 10px; -fx-text-fill: #d0d0d0;" text="• Call Rally to start your own rally on the trap." wrapText="true" />
                <Label style="-fx-font-size: 10px; -fx-text-fill: #d0d0d0;" text="• Join Rally to join existing rallies automatically." wrapText="true" />
                <Label style="-fx-font-size: 10px; -fx-text-fill: #d0d0d0;" text="• Gather and Autojoin will be rescheduled at end to send marches again." wrapText="true" />
                <Separator style="-fx-background-color: #ff8c1a; -fx-opacity: 1;" />
            </children>
        </VBox>
    </children>
</GridPane>
