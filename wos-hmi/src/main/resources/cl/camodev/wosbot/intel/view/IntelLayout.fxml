<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="550.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="14" style="-fx-background-color: #1f1f1f; -fx-background-radius: 8; -fx-padding: 18;">
                    <children>
                        <!-- Intel Section -->
                        <VBox spacing="0" style="-fx-background-color: #242424; -fx-background-radius: 8;">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#00ccff, #0066ff); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <CheckBox fx:id="checkBoxIntel" mnemonicParsing="false" style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Enable Intel" />
                                    </children>
                                </HBox>
                                <VBox spacing="8" style="-fx-padding: 12;">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Automates intelligence gathering and processing for different types of targets" wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <GridPane hgap="15" vgap="10">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="50" />
                                                <ColumnConstraints percentWidth="50" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                            </rowConstraints>
                                            <children>
                                                <CheckBox fx:id="checkBoxFireCrystalEra" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Fire Crystal Era" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                                                <CheckBox fx:id="checkBoxFireBeast" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Fire Beast" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                                <CheckBox fx:id="checkBoxBeast" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Beast" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                                <CheckBox fx:id="checkBoxSurvivors" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Survivors" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                                <CheckBox fx:id="checkBoxJourney" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Journey" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                                <CheckBox fx:id="checkBoxSmartIntel" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Use Smart Intel Processing" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                                <CheckBox fx:id="checkBoxRecallGatherTroops" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Recall Gather Troops" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                            </children>
                                        </GridPane>

                                        <VBox spacing="8" style="-fx-padding: 10 0 0 0; -fx-background-color: #2a2a2a; -fx-background-radius: 4; -fx-padding: 10;">
                                            <children>
                                                <CheckBox fx:id="checkBoxUseFlag" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Use Flag" />

                                                <HBox fx:id="hboxFlagSelection" alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 5 0 0 20;">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Flag Selection" minWidth="100.0" />
                                                        <ComboBox fx:id="comboBoxBeastFlag" prefWidth="150.0" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
