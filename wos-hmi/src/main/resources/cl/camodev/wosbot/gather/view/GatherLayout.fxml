<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="550.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="14" style="-fx-background-color: #1f1f1f; -fx-background-radius: 8; -fx-padding: 18;">
                    <children>
                        <!-- Gathering Section -->
                        <VBox spacing="0" style="-fx-background-color: #242424; -fx-background-radius: 8;">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#4caf50, #2e7d32); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <CheckBox fx:id="checkBoxGatherResources" mnemonicParsing="false" style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Activate Gathering" />
                                    </children>
                                </HBox>
                                <VBox spacing="8" style="-fx-padding: 12;">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Automates resource gathering from the map with customizable settings" wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <!-- Resource Types -->
                                        <GridPane hgap="15" vgap="10" fx:id="gridPaneGathering">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="35" />
                                                <ColumnConstraints percentWidth="65" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                            </rowConstraints>
                                            <children>
                                                <!-- Meat -->
                                                <CheckBox fx:id="checkBoxGatherMeat" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Gather Meat" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Level" />
                                                        <ComboBox fx:id="comboBoxLevelMeat" prefWidth="120.0" />
                                                    </children>
                                                </HBox>

                                                <!-- Wood -->
                                                <CheckBox fx:id="checkBoxGatherWood" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Gather Wood" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Level" />
                                                        <ComboBox fx:id="comboBoxLevelWood" prefWidth="120.0" />
                                                    </children>
                                                </HBox>

                                                <!-- Coal -->
                                                <CheckBox fx:id="checkBoxGatherCoal" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Gather Coal" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Level" />
                                                        <ComboBox fx:id="comboBoxLevelCoal" prefWidth="120.0" />
                                                    </children>
                                                </HBox>

                                                <!-- Iron -->
                                                <CheckBox fx:id="checkBoxGatherIron" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Gather Iron" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Level" />
                                                        <ComboBox fx:id="comboBoxLevelIron" prefWidth="120.0" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </GridPane>

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <!-- Gathering Options -->
                                        <VBox spacing="12" style="-fx-background-color: #2a2a2a; -fx-background-radius: 4; -fx-padding: 10;">
                                            <children>
                                                <Label style="-fx-text-fill: #b5b5b5; -fx-font-weight: bold;" text="Options" />

                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <children>
                                                        <CheckBox fx:id="checkBoxGatherSpeedBoost" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Gather Speed Boost" />
                                                        <ComboBox fx:id="comboBoxGatherSpeedBoostType" prefWidth="120.0" />
                                                    </children>
                                                </HBox>

                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Active March Queue:" />
                                                        <ComboBox fx:id="comboBoxActiveMarchQueue" prefWidth="120.0" />
                                                    </children>
                                                </HBox>

                                                <CheckBox fx:id="checkBoxRemoveHeros" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Remove 2nd and 3rd hero from march" />
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
