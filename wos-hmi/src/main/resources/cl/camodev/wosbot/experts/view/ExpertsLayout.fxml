<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import cl.camodev.wosbot.common.view.PriorityListView?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="550.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <content>
                <VBox spacing="14" style="-fx-background-color: #1f1f1f; -fx-background-radius: 8; -fx-padding: 18;" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <!-- Experts Section -->
                        <VBox spacing="0" style="-fx-background-color: #242424; -fx-background-radius: 8;" VBox.vgrow="ALWAYS" maxHeight="1.7976931348623157E308">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#a78bfa, #7c3aed); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Experts Management" />
                                    </children>
                                </HBox>
                                <VBox spacing="8" style="-fx-padding: 12;" VBox.vgrow="ALWAYS" maxHeight="1.7976931348623157E308">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Automates expert-related tasks and skill training" wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <!-- Basic Expert Tasks Section -->
                                        <VBox spacing="10" style="-fx-padding: 0 0 10 0;">
                                            <children>
                                                <Label style="-fx-text-fill: #e5e5e5; -fx-font-weight: bold;" text="Basic Tasks" />

                                                <CheckBox fx:id="claimIntelCheckBox" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim new Intel from Agnes" />

                                                <CheckBox fx:id="claimLoyaltyTagCheckBox" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim free loyalty tag from Romulus" />

                                                <HBox spacing="10">
                                                    <children>
                                                        <CheckBox fx:id="claimTroopsCheckBox" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim free troops from Romulus" />
                                                        <ComboBox fx:id="troopTypeComboBox" prefWidth="150.0" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <!-- Skill Training Section -->
                                        <VBox spacing="10" VBox.vgrow="ALWAYS" maxHeight="1.7976931348623157E308">
                                            <children>
                                                <CheckBox fx:id="enableExpertSkillTrainingCheckBox" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5; -fx-font-weight: bold;" text="Enable Experts Skill Training" />

                                                <VBox fx:id="expertSkillTrainingVBox" spacing="10" style="-fx-background-color: #2a2a2a; -fx-background-radius: 4; -fx-padding: 10;" VBox.vgrow="ALWAYS" maxHeight="1.7976931348623157E308">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5; -fx-font-weight: bold;" text="Expert Skills Training Priority:" />
                                                        <PriorityListView fx:id="expertSkillPriorities" style="-fx-background-color: #333333;" VBox.vgrow="ALWAYS" maxHeight="1.7976931348623157E308" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
