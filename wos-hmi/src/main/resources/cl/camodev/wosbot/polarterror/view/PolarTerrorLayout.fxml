<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="550.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="14" style="-fx-background-color: #1f1f1f; -fx-background-radius: 8; -fx-padding: 18;">
                    <children>
                        <!-- Polar Terror Section -->
                        <VBox spacing="0" style="-fx-background-color: #242424; -fx-background-radius: 8;">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#ff7d45, #d84315); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <CheckBox fx:id="checkBoxEnablePolarTerror" mnemonicParsing="false" style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Enable Polar Terror Hunting" />
                                    </children>
                                </HBox>
                                <VBox spacing="8" style="-fx-padding: 12;">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Automates hunting of polar terror creatures with selected settings" wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <GridPane hgap="15" vgap="10">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="30" />
                                                <ColumnConstraints percentWidth="70" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                            </rowConstraints>
                                            <children>
                                                <Label alignment="CENTER_RIGHT" style="-fx-text-fill: #e5e5e5;" text="Level" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                                <ComboBox fx:id="comboBoxPolarTerrorLevel" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                                <Label alignment="CENTER_RIGHT" style="-fx-text-fill: #e5e5e5;" text="Flag" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                                <ComboBox fx:id="comboBoxPolarTerrorFlag" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                                <Label alignment="CENTER_RIGHT" style="-fx-text-fill: #e5e5e5;" text="Operation Mode" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                                <ComboBox fx:id="comboBoxPolarTerrorMode" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                            </children>
                                        </GridPane>

                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #ffcc00; -fx-font-style: italic;" text="Note: When using a flag or when limited mode is active, rallies will be called one by one." wrapText="true" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
