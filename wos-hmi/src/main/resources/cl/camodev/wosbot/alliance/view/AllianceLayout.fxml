<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="550.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <content>
                <VBox spacing="14" style="-fx-background-color: #1f1f1f; -fx-background-radius: 8; -fx-padding: 18;" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <!-- Alliance Activities Section -->
                        <VBox spacing="0" style="-fx-background-color: #242424; -fx-background-radius: 8;">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#f6b93b, #e67e22); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Alliance Activities" />
                                    </children>
                                </HBox>
                                <VBox spacing="10" style="-fx-padding: 12;">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Configure alliance-related tasks and activities" wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <!-- Daily Tasks Section -->
                                        <VBox spacing="10" style="-fx-background-color: #2a2a2a; -fx-background-radius: 4; -fx-padding: 10;">
                                            <children>
                                                <Label style="-fx-text-fill: #e5e5e5; -fx-font-weight: bold;" text="Daily Tasks" />

                                                <GridPane hgap="20" vgap="10">
                                                    <columnConstraints>
                                                        <ColumnConstraints percentWidth="60" />
                                                        <ColumnConstraints percentWidth="40" />
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints />
                                                        <RowConstraints />
                                                        <RowConstraints />
                                                        <RowConstraints />
                                                        <RowConstraints />
                                                    </rowConstraints>
                                                    <children>
                                                        <CheckBox fx:id="checkBoxTechContribution" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Tech contribution" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                                        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Offset Time:" />
                                                                <TextField fx:id="textfieldTechOffset" prefWidth="70" />
                                                            </children>
                                                        </HBox>

                                                        <CheckBox fx:id="checkBoxChests" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim chests" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                                        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Offset Time:" />
                                                                <TextField fx:id="textfieldChestOffset" prefWidth="70" />
                                                            </children>
                                                        </HBox>

                                                        <CheckBox fx:id="checkBoxHonorChest" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim honor chest" GridPane.columnIndex="0" GridPane.rowIndex="2" />

                                                        <CheckBox fx:id="checkBoxTriumph" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim Triumph" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                                        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Offset Time:" />
                                                                <TextField fx:id="textfieldTriumphOffset" prefWidth="70" />
                                                            </children>
                                                        </HBox>

                                                        <CheckBox fx:id="checkBoxAlliesEssence" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim allies essence" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                                        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Fail offset:" />
                                                                <TextField fx:id="textfieldAlliesEssenceOffsett" prefWidth="70" />
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </GridPane>
                                            </children>
                                        </VBox>

                                        <!-- Autojoin Section -->
                                        <VBox spacing="10" style="-fx-background-color: #2a2a2a; -fx-background-radius: 4; -fx-padding: 10;">
                                            <children>
                                                <Label style="-fx-text-fill: #e5e5e5; -fx-font-weight: bold;" text="Rally Autojoin" />

                                                <CheckBox fx:id="checkBoxAutojoin" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Enable Autojoin" />

                                                <GridPane hgap="20" vgap="10">
                                                    <columnConstraints>
                                                        <ColumnConstraints percentWidth="60" />
                                                        <ColumnConstraints percentWidth="40" />
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints />
                                                        <RowConstraints />
                                                    </rowConstraints>
                                                    <children>
                                                        <HBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Number of queues:" />
                                                                <ComboBox fx:id="comboBoxAutojoinQueues" prefWidth="90" />
                                                            </children>
                                                        </HBox>

                                                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                                            <children>
                                                                <RadioButton fx:id="radioAllTroops" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="All Troops" />
                                                                <RadioButton fx:id="radioUseFormation" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Use Formation" />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </GridPane>
                                            </children>
                                        </VBox>

                                        <!-- Help Requests -->
                                        <CheckBox fx:id="checkBoxHelpRequests" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Help alliance requests" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
